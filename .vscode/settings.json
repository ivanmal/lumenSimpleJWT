{
    "php.suggest.basic": false,
    "php.validate.run": "onType",
    "phpcs.standard": "PSR12",
    "phpcs.executablePath": "./docker_phpcs.sh",
    "intelephense.completion.fullyQualifyGlobalConstantsAndFunctions": true,
    "window.zoomLevel": 1,
    "blade.format.enable": true,
    "intelephense.environment.phpVersion": "7.4.*",
    "intelephense.telemetry.enabled": false,
    "intelephense.diagnostics.undefinedTypes": false,
    "intelephense.diagnostics.undefinedFunctions": false,
    "intelephense.diagnostics.undefinedConstants": false,
    "intelephense.diagnostics.undefinedClassConstants": false,
    "intelephense.diagnostics.undefinedMethods": false,
    "intelephense.diagnostics.undefinedProperties": false,
    "intelephense.diagnostics.undefinedSymbols": false,
    "editor.formatOnType": true,
    "editor.formatOnPaste": true,
    "json.format.enable": true,
    "javascript.format.enable": true,
    "editor.formatOnSave": true,
    "phpcs.ignorePatterns": [
        "./api/vendor/*",
        "./api/web/*",
        "./api/public/*",
        "*.js",
        "*.xml",
        "./api/ruleset.xml"
    ],
    "files.associations": {
        "*.production": "dockerfile",
    },
    "files.watcherExclude": {
        "\"**/vendor/**\": true,": true
    },
    "workbench.colorTheme": "Dracula",
    "workbench.iconTheme": "material-icon-theme",
    "git.autofetch": true,
    "git.confirmSync": false,
    "terminal.integrated.shell.linux": "/bin/bash",
    "terminal.integrated.shellArgs.linux": [
        "--login",
    ],
    "php.validate.enable": false,
    "explorer.compactFolders": false,
    "phpunit.phpunit": "/var/www/html/vendor/bin/phpunit",
    "phpunit.relativeFilePath": true,
    "phpunit.showAfterExecution": "always",
    "phpunit.php": "/usr/bin/docker exec -i jwt-php-fpm php",
    "phpunit.shell": "/bin/bash",
    "phpunit.remoteCwd": "/var/www/html/",
    "phpunit.args": [
        "--configuration ./phpunit.xml",
    ],
    "diffEditor.ignoreTrimWhitespace": false,
    "artisan.docker.enabled": true,
    "artisan.docker.command": "docker exec -it jwt-php-fpm"
}